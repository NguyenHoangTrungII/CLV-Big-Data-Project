<configuration>
    <!-- Đường dẫn đến dữ liệu của HBase -->
    <property>
        <name>hbase.rootdir</name>
        <value>file:///usr/local/hbase</value>
    </property>

    <!-- Cấu hình Zookeeper -->
    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>/usr/local/hbase/zookeeper</value>
    </property>


    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>zookeeper</value>  <!-- Hoặc địa chỉ IP của Zookeeper container -->
    </property>

    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.maxClientCnxns</name>
        <value>60</value>
    </property>

    <property>
        <name>hbase.client.operation.timeout</name>
        <value>60000</value> <!-- Tăng thời gian timeout lên 60 giây -->
    </property>

    <property>
        <name>hbase.client.scanner.timeout.period</name>
        <value>60000</value> <!-- Tăng thời gian timeout cho scan -->
    </property>

    <property>
        <name>hbase.thrift.enabled</name>
        <value>true</value>
        <description>Enable Thrift server</description>
    </property>

    <!-- Cấu hình thêm (nếu cần) -->
    <!-- Các tham số khác để tùy chỉnh hệ thống HBase -->
</configuration>
