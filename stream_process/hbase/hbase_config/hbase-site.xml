<configuration>
    <!-- Đường dẫn đến dữ liệu của HBase -->
    <property>
        <name>hbase.rootdir</name>
        <value>file:///usr/local/hbase</value>
    </property>

    <!-- Cấu hình Zookeeper -->
    <property>
        <name>hbase.zookeeper.property.dataDir</name>
        <value>/usr/local/hbase/zookeeper</value>
    </property>


    <property>
        <name>hbase.zookeeper.quorum</name>
        <value>zookeeper</value>  <!-- Hoặc địa chỉ IP của Zookeeper container -->
    </property>

    <property>
        <name>hbase.zookeeper.property.clientPort</name>
        <value>2181</value>
    </property>
    <property>
        <name>hbase.zookeeper.property.maxClientCnxns</name>
        <value>60</value>
    </property>

    <!-- Cấu hình thêm (nếu cần) -->
    <!-- Các tham số khác để tùy chỉnh hệ thống HBase -->
</configuration>
