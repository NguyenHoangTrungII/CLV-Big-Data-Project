    <value>hdfs://namenode:9000/hbase</value> 
  </property>

  <property>
    <name>hbase.cluster.distributed</name>
    <value>true</value> 
  </property>

  
  <property>
    <name>hbase.regionserver.wal.dir</name>
    <value>hdfs://namenode:9000/hbase/wal</value> 
  </property>

  <property>
    <name>hbase.hregion.dir</name>
